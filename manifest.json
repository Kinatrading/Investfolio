{
  "manifest_version": 3,
  "name": "Steam Invest Ultra (UAH)",
  "description": "Per-item alerts, fixed auto-refresh, JSON import/export, header PnL, break-even, liquidity depth, volatility, tags, search, dark mode.",
  "version": "4.2.0",
  "action": {
    "default_title": "Open Steam Invest Ultra"
  },
  "permissions": [
    "alarms",
    "notifications",
    "scripting",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>",
    "https://api.telegram.org/*",
    "https://steamcommunity.com/*",
    "https://steamcommunity.com/market/*"
  ],
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://steamcommunity.com/market/listings/*"
      ],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_idle"
    }
  ]
}